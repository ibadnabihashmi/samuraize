{
  "manifest_version": 2,

  "name": "Samuraize",
  "description": "Samuraize summarize your text with its sharp katana!!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["jquery.min.js", "samurai.js"]
    }
  ]
}
